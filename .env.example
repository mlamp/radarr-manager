# Copy this file to .env and customize values for your environment.

# Radarr connection
# Note: /api/v3 will be automatically appended if not present
RADARR_BASE_URL=http://localhost:7878
RADARR_API_KEY=your-radarr-api-key

# Discovery provider selection
LLM_PROVIDER=openai
RADARR_REGION=US
RADARR_CACHE_TTL_HOURS=6

# OpenAI provider (required when LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Optional provider credentials
GEMINI_API_KEY=
GROK_API_KEY=

# MCP Service Configuration (v1.9.0+)
MCP_HOST=127.0.0.1
MCP_PORT=8091
MCP_TRANSPORT=stdio

# Discovery Mode (v1.11.0+, smart_agentic v1.12.0+)
# Options: openai (default), hybrid, scraper, smart_agentic
# - openai: LLM-based discovery with web search (requires OPENAI_API_KEY)
# - hybrid: Combines web scraping + OpenAI for reliable discovery
# - scraper: Web scraping only (requires Crawl4AI or Firecrawl service)
# - smart_agentic: LLM orchestrator with agents (best quality, requires OPENAI_API_KEY + Crawl4AI)
DISCOVERY_MODE=openai

# Scraper Configuration (for hybrid/scraper/smart_agentic modes)
# Run Crawl4AI locally: docker-compose -f docker-compose.dev.yml up -d
# Dashboard: http://localhost:11235/dashboard
# Playground: http://localhost:11235/playground
SCRAPER_ENABLED=false
SCRAPER_PROVIDER=crawl4ai
SCRAPER_API_URL=http://localhost:11235
SCRAPER_API_KEY=
# Alternative: Use Firecrawl instead
# SCRAPER_PROVIDER=firecrawl
# SCRAPER_API_URL=http://localhost:3002

# Radarr library defaults used during sync
RADARR_QUALITY_PROFILE_ID=1
RADARR_ROOT_FOLDER_PATH=/data/radarr/movies
RADARR_MINIMUM_AVAILABILITY=announced
RADARR_MONITOR=true
RADARR_TAGS=radarr-manager

# Point to a custom TOML config if desired
RADARR_MANAGER_CONFIG=
